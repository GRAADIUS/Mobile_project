<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_project.Time_page">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                x:Name="click_lbl"  
                Text="!!!!!!!!CLICK!!!!!!!!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                BackgroundColor="Pink">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tappened"/>
                </Label.GestureRecognizers>
            </Label>
            <Button 
                x:Name="Time_run"
                Text="Start"
                FontSize="Medium"
                Clicked="Time_run_Clicked">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>